@using Microsoft.AspNetCore.Identity
@using Domotica.Areas.Identity.Data

@inject SignInManager<DomoticaUser> SignInManager
@inject UserManager<DomoticaUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
	    <a class="nav-link nav-text-color" asp-area="" asp-controller="Home" asp-action="Dashboard">Go to dashboard</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
	    <a class="nav-link nav-text-color" asp-area="" asp-controller="Home" asp-action="Dashboard">Go to dashboard</a>
    </li>
}
</ul>
